---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Eye, Thermometer, BarChart3, Settings, Zap, ArrowRight } from 'lucide-react';

const services = [
  {
    icon: Thermometer,
    title: "FLIR Thermische Camera's",
    description: "Geavanceerde thermische beeldvorming voor preventieve inspectie en temperatuurmonitoring."
  },
  {
    icon: Eye,
    title: "Alarmcentrale",
    description: "24/7 bewaking en monitoring van alle beveiligings- en brandsystemen vanuit onze centrale."
  },
  {
    icon: BarChart3,
    title: "Dashboarding",
    description: "Real-time dashboards en rapportages voor inzicht in de status van al uw systemen."
  },
  {
    icon: Settings,
    title: "Preventief Onderhoud",
    description: "Proactief onderhoudsbeheer om storingen te voorkomen en de levensduur te verlengen."
  }
];
---

<Layout 
  title="Inspectie & Monitoring - Installation Technologies N.V."
  description="Professionele inspectie en monitoring op CuraÃ§ao. FLIR thermische camera's, alarmcentrale en dashboarding van Installation Technologies N.V."
>
  <Header />
  
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-purple-900 to-indigo-900 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <img src="https://images.pexels.com/photos/442150/pexels-photo-442150.jpeg" alt="" class="w-full h-full object-cover" />
      </div>
      <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center text-white">
          <div class="w-20 h-20 bg-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-8">
            <Eye class="w-10 h-10 text-white" />
          </div>
          <h1 class="text-5xl sm:text-6xl font-bold mb-6 animate-slide-up">
            Inspectie & <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-indigo-400">Monitoring</span>
          </h1>
          <p class="text-xl text-purple-200 leading-relaxed animate-slide-up" style="animation-delay: 0.2s;">
            Real-time controle via thermische camera's, dashboards en meldkamers. 
            Wij zorgen voor proactieve monitoring en preventief onderhoud van al uw systemen.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Detail -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {services.map((service, index) => {
            const Icon = service.icon;
            return (
              <div class={`bg-gradient-to-br from-purple-50 to-indigo-50 rounded-2xl p-8 hover:shadow-xl transition-all duration-300 animate-slide-up`} style={`animation-delay: ${index * 0.1}s;`}>
                <div class="w-16 h-16 bg-purple-500 rounded-xl flex items-center justify-center mb-6">
                  <Icon class="w-8 h-8 text-white" />
                </div>
                <h3 class="text-xl font-bold text-primary-900 mb-4">{service.title}</h3>
                <p class="text-primary-600 leading-relaxed">{service.description}</p>
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-primary-50">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-4xl font-bold text-primary-900 mb-8">
              Proactieve monitoring en onderhoud
            </h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Thermometer class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Thermische Inspectie</h3>
                  <p class="text-primary-600">FLIR camera's detecteren problemen voordat ze tot storingen leiden.</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-indigo-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <BarChart3 class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Real-time Dashboards</h3>
                  <p class="text-primary-600">Live inzicht in de status en performance van al uw systemen.</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Zap class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Snelle Respons</h3>
                  <p class="text-primary-600">Directe alarmering en snelle interventie bij afwijkingen.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="relative">
            <img 
              src="https://images.pexels.com/photos/590016/pexels-photo-590016.jpeg" 
              alt="Inspectie & Monitoring"
              class="rounded-2xl shadow-2xl"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-purple-500 to-indigo-500">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-white mb-6">
          Vraag deze dienst aan
        </h2>
        <p class="text-xl text-purple-100 mb-8 max-w-3xl mx-auto">
          Voorkom storingen en verleng de levensduur van uw systemen met onze 
          professionele inspectie en monitoring diensten.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-white text-purple-600 px-8 py-4 rounded-lg font-semibold hover:bg-purple-50 transition-colors inline-flex items-center justify-center">
            Vraag Offerte Aan
            <ArrowRight class="w-5 h-5 ml-2" />
          </a>
          <a href="tel:+5999461532" class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-8 py-4 rounded-lg font-semibold hover:bg-white/20 transition-colors">
            Bel Direct: +599 9 461 1532
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>