---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Server, Wifi, Phone, HardDrive, Monitor, ArrowRight } from 'lucide-react';

const services = [
  {
    icon: Wifi,
    title: "Netwerkbekabeling",
    description: "Gestructureerde bekabeling met Cat6/Cat6A kabels, glasvezel en complete netwerkinfrastructuur."
  },
  {
    icon: Server,
    title: "Serverruimtes",
    description: "Professionele serverkasten, klimaatbeheersing, UPS-systemen en beveiligde toegang."
  },
  {
    icon: Phone,
    title: "VoIP Systemen",
    description: "Moderne telefoonsystemen, PBX-installaties en geïntegreerde communicatieoplossingen."
  },
  {
    icon: HardDrive,
    title: "IT Racks",
    description: "19-inch serverkasten, patchpanelen, switches en professionele kabelmanagement."
  },
  {
    icon: Monitor,
    title: "Monitoring",
    description: "Netwerkmonitoring, performance tracking en proactief onderhoud van IT-infrastructuur."
  }
];
---

<Layout 
  title="IT & Netwerken - Installation Technologies N.V."
  description="Professionele IT-infrastructuur op Curaçao. Netwerkbekabeling, serverruimtes en VoIP systemen van Installation Technologies N.V."
>
  <Header />
  
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-primary-900 to-secondary-900 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <img src="https://images.pexels.com/photos/325229/pexels-photo-325229.jpeg" alt="" class="w-full h-full object-cover" />
      </div>
      <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center text-white">
          <div class="w-20 h-20 bg-secondary-500 rounded-2xl flex items-center justify-center mx-auto mb-8">
            <Server class="w-10 h-10 text-white" />
          </div>
          <h1 class="text-5xl sm:text-6xl font-bold mb-6 animate-slide-up">
            IT & <span class="text-transparent bg-clip-text bg-gradient-to-r from-secondary-400 to-accent-400">Netwerken</span>
          </h1>
          <p class="text-xl text-primary-200 leading-relaxed animate-slide-up" style="animation-delay: 0.2s;">
            Slimme bekabeling, serverruimtes en telefonie-oplossingen voor elk type organisatie. 
            Wij zorgen voor een betrouwbare en toekomstbestendige IT-infrastructuur.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Detail -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map((service, index) => {
            const Icon = service.icon;
            return (
              <div class={`bg-gradient-to-br from-secondary-50 to-accent-50 rounded-2xl p-8 hover:shadow-xl transition-all duration-300 animate-slide-up`} style={`animation-delay: ${index * 0.1}s;`}>
                <div class="w-16 h-16 bg-secondary-500 rounded-xl flex items-center justify-center mb-6">
                  <Icon class="w-8 h-8 text-white" />
                </div>
                <h3 class="text-xl font-bold text-primary-900 mb-4">{service.title}</h3>
                <p class="text-primary-600 leading-relaxed">{service.description}</p>
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-primary-50">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-4xl font-bold text-primary-900 mb-8">
              Toekomstbestendige IT-infrastructuur
            </h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-secondary-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Wifi class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">High-Speed Connectiviteit</h3>
                  <p class="text-primary-600">Cat6A bekabeling en glasvezel voor maximale snelheid en betrouwbaarheid.</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-accent-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Server class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Professionele Serverruimtes</h3>
                  <p class="text-primary-600">Klimaatbeheersing, UPS-systemen en beveiligde toegang voor uw servers.</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-secondary-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Monitor class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">24/7 Monitoring</h3>
                  <p class="text-primary-600">Continue bewaking van uw netwerk voor optimale performance.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="relative">
            <img 
              src="https://images.pexels.com/photos/159304/network-cable-ethernet-computer-159304.jpeg" 
              alt="IT & Netwerken"
              class="rounded-2xl shadow-2xl"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-secondary-500 to-accent-500">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-white mb-6">
          Vraag deze dienst aan
        </h2>
        <p class="text-xl text-secondary-100 mb-8 max-w-3xl mx-auto">
          Klaar voor een professionele IT-infrastructuur? Neem contact op voor een 
          analyse van uw huidige situatie en een offerte op maat.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-white text-secondary-600 px-8 py-4 rounded-lg font-semibold hover:bg-secondary-50 transition-colors inline-flex items-center justify-center">
            Vraag Offerte Aan
            <ArrowRight class="w-5 h-5 ml-2" />
          </a>
          <a href="tel:+5999461532" class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-8 py-4 rounded-lg font-semibold hover:bg-white/20 transition-colors">
            Bel Direct: +599 9 461 1532
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>