---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Car, Camera, Smartphone, BarChart3, Shield, ArrowRight } from 'lucide-react';

const services = [
  {
    icon: Car,
    title: "Automatische Systemen",
    description: "Automatische slagbomen, poorten en toegangscontrole voor parkeerplaatsen en bedrijfsterreinen."
  },
  {
    icon: Camera,
    title: "Kentekenherkenning",
    description: "ANPR-systemen voor automatische herkenning en registratie van kentekens bij in- en uitgang."
  },
  {
    icon: Smartphone,
    title: "Parkeerbeheersoftware",
    description: "Complete software voor parkeerbeheer, reserveringen en betalingsverwerking."
  },
  {
    icon: Shield,
    title: "Toegangscontrole",
    description: "Geïntegreerde toegangscontrole met kaartlezers, codes en smartphone-apps."
  }
];
---

<Layout 
  title="Parkeersystemen - Installation Technologies N.V."
  description="Professionele parkeersystemen op Curaçao. Automatische systemen, kentekenherkenning en parkeerbeheersoftware van Installation Technologies N.V."
>
  <Header />
  
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-green-900 to-emerald-900 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <img src="https://images.pexels.com/photos/63294/autos-technology-vw-multi-storey-car-park-63294.jpeg" alt="" class="w-full h-full object-cover" />
      </div>
      <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center text-white">
          <div class="w-20 h-20 bg-green-500 rounded-2xl flex items-center justify-center mx-auto mb-8">
            <Car class="w-10 h-10 text-white" />
          </div>
          <h1 class="text-5xl sm:text-6xl font-bold mb-6 animate-slide-up">
            Parkeer<span class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-emerald-400">systemen</span>
          </h1>
          <p class="text-xl text-green-200 leading-relaxed animate-slide-up" style="animation-delay: 0.2s;">
            Automatische toegang en registratie voor parkeerplaatsen en bedrijfsinritten. 
            Onze slimme parkeersystemen maken parkeren efficiënt en gebruiksvriendelijk.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Detail -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {services.map((service, index) => {
            const Icon = service.icon;
            return (
              <div class={`bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-8 hover:shadow-xl transition-all duration-300 animate-slide-up`} style={`animation-delay: ${index * 0.1}s;`}>
                <div class="w-16 h-16 bg-green-500 rounded-xl flex items-center justify-center mb-6">
                  <Icon class="w-8 h-8 text-white" />
                </div>
                <h3 class="text-xl font-bold text-primary-900 mb-4">{service.title}</h3>
                <p class="text-primary-600 leading-relaxed">{service.description}</p>
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-primary-50">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-4xl font-bold text-primary-900 mb-8">
              Slimme parkeeroplossingen
            </h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Camera class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Automatische Herkenning</h3>
                  <p class="text-primary-600">ANPR-camera's herkennen kentekens automatisch voor snelle toegang.</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-emerald-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Smartphone class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Mobiele App</h3>
                  <p class="text-primary-600">Gebruikers kunnen parkeerplaatsen reserveren en betalen via smartphone.</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <BarChart3 class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Rapportage & Analytics</h3>
                  <p class="text-primary-600">Gedetailleerde rapportages over parkeergebruik en inkomsten.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="relative">
            <img 
              src="https://images.pexels.com/photos/164634/pexels-photo-164634.jpeg" 
              alt="Parkeersystemen"
              class="rounded-2xl shadow-2xl"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-green-500 to-emerald-500">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-white mb-6">
          Vraag deze dienst aan
        </h2>
        <p class="text-xl text-green-100 mb-8 max-w-3xl mx-auto">
          Maak parkeren efficiënt en gebruiksvriendelijk met onze slimme parkeersystemen. 
          Neem contact op voor een analyse van uw parkeersituatie.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-white text-green-600 px-8 py-4 rounded-lg font-semibold hover:bg-green-50 transition-colors inline-flex items-center justify-center">
            Vraag Offerte Aan
            <ArrowRight class="w-5 h-5 ml-2" />
          </a>
          <a href="tel:+5999461532" class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-8 py-4 rounded-lg font-semibold hover:bg-white/20 transition-colors">
            Bel Direct: +599 9 461 1532
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>