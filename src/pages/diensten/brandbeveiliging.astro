---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Flame, AlertTriangle, Zap, Eye, Settings, ArrowRight } from 'lucide-react';

const services = [
  {
    icon: AlertTriangle,
    title: "Branddetectie",
    description: "Geavanceerde rookdetectie, warmtedetectie en multi-sensor brandmelders voor vroege waarschuwing."
  },
  {
    icon: Zap,
    title: "Blussystemen",
    description: "Automatische sprinklerinstallaties, gasblussystemen en schuimblussystemen voor effectieve brandbestrijding."
  },
  {
    icon: Eye,
    title: "Smoke Screen",
    description: "Concept Smoke Screen systemen die zicht belemmeren en diefstal voorkomen tijdens brand of inbraak."
  },
  {
    icon: Settings,
    title: "24/7 Monitoring",
    description: "Continue bewaking van brandmeldinstallaties met directe doormelding naar brandweer en eigenaar."
  }
];
---

<Layout 
  title="Brandbeveiliging - Installation Technologies N.V."
  description="Professionele brandbeveiliging op CuraÃ§ao. Branddetectie, blussystemen en smoke screen van Installation Technologies N.V."
>
  <Header />
  
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-red-900 to-orange-900 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <img src="https://images.pexels.com/photos/280076/pexels-photo-280076.jpeg" alt="" class="w-full h-full object-cover" />
      </div>
      <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center text-white">
          <div class="w-20 h-20 bg-red-500 rounded-2xl flex items-center justify-center mx-auto mb-8">
            <Flame class="w-10 h-10 text-white" />
          </div>
          <h1 class="text-5xl sm:text-6xl font-bold mb-6 animate-slide-up">
            Brand<span class="text-transparent bg-clip-text bg-gradient-to-r from-red-400 to-orange-400">beveiliging</span>
          </h1>
          <p class="text-xl text-red-200 leading-relaxed animate-slide-up" style="animation-delay: 0.2s;">
            Detecteer en onderdruk brand vroegtijdig met gecertificeerde installaties. 
            Onze brandveiligheidssystemen beschermen levens en eigendom met de nieuwste technologie.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Detail -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {services.map((service, index) => {
            const Icon = service.icon;
            return (
              <div class={`bg-gradient-to-br from-red-50 to-orange-50 rounded-2xl p-8 hover:shadow-xl transition-all duration-300 animate-slide-up`} style={`animation-delay: ${index * 0.1}s;`}>
                <div class="w-16 h-16 bg-red-500 rounded-xl flex items-center justify-center mb-6">
                  <Icon class="w-8 h-8 text-white" />
                </div>
                <h3 class="text-xl font-bold text-primary-900 mb-4">{service.title}</h3>
                <p class="text-primary-600 leading-relaxed">{service.description}</p>
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-primary-50">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-4xl font-bold text-primary-900 mb-8">
              Gecertificeerde brandveiligheid
            </h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-red-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <AlertTriangle class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Vroege Detectie</h3>
                  <p class="text-primary-600">Geavanceerde sensoren detecteren brand in het allereerste stadium.</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-orange-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Zap class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Automatische Blussing</h3>
                  <p class="text-primary-600">Snelle en effectieve brandbestrijding zonder menselijke tussenkomst.</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-red-500 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                  <Settings class="w-4 h-4 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-primary-900 mb-2">Onderhoud & Service</h3>
                  <p class="text-primary-600">Regelmaige controles en onderhoud voor optimale werking.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="relative">
            <img 
              src="https://images.pexels.com/photos/1427541/pexels-photo-1427541.jpeg" 
              alt="Brandbeveiliging"
              class="rounded-2xl shadow-2xl"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-red-500 to-orange-500">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-white mb-6">
          Vraag deze dienst aan
        </h2>
        <p class="text-xl text-red-100 mb-8 max-w-3xl mx-auto">
          Brandveiligheid is geen luxe maar een noodzaak. Neem contact op voor een 
          professionele brandveiligheidsanalyse van uw pand.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-white text-red-600 px-8 py-4 rounded-lg font-semibold hover:bg-red-50 transition-colors inline-flex items-center justify-center">
            Vraag Offerte Aan
            <ArrowRight class="w-5 h-5 ml-2" />
          </a>
          <a href="tel:+5999461532" class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-8 py-4 rounded-lg font-semibold hover:bg-white/20 transition-colors">
            Bel Direct: +599 9 461 1532
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>