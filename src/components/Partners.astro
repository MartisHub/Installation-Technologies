---
import { ExternalLink, Award, Wrench, Shield } from 'lucide-react';

const partners = [
  {
    name: "FLIR Systems",
    logo: "/partners/flir.png",
    category: "Thermische Detectie",
    description: "Wereldleider in thermische imaging technologie voor inspectie en monitoring",
    specialties: ["Thermische Camera's", "Branddetectie", "Preventieve Inspectie"],
    website: "https://www.flir.com"
  },
  {
    name: "VIMAR",
    logo: "/partners/vimar.png", 
    category: "Elektrotechniek",
    description: "Italiaanse kwaliteit in elektrische installaties en domotica-oplossingen",
    specialties: ["Domotica", "Schakelmateriaal", "Laadstations"],
    website: "https://www.vimar.com"
  },
  {
    name: "Axis Communications",
    logo: "/partners/axis.png",
    category: "Videobewaking",
    description: "Marktleider in netwerkgebonden videobewaking en IP-camera's",
    specialties: ["IP Camera's", "Video Analytics", "Toegangscontrole"],
    website: "https://www.axis.com"
  },
  {
    name: "Panduit",
    logo: "/partners/panduit.png",
    category: "Netwerkinfrastructuur", 
    description: "Innovatieve oplossingen voor netwerkinfrastructuur en datacenter connectiviteit",
    specialties: ["Netwerkbekabeling", "Datacenter Solutions", "Fiber Optics"],
    website: "https://www.panduit.com"
  },
  {
    name: "Eaton",
    logo: "/partners/eaton.png",
    category: "Energie Management",
    description: "Intelligent power management en bescherming voor kritieke systemen",
    specialties: ["UPS Systemen", "Power Protection", "Energie Management"],
    website: "https://www.eaton.com"
  },
  {
    name: "Leviton",
    logo: "/partners/leviton.png",
    category: "Elektrische Installaties",
    description: "Innovatieve elektrische producten en slimme oplossingen",
    specialties: ["Smart Lighting", "EV Charging", "Elektrische Componenten"],
    website: "https://www.leviton.com"
  },
  {
    name: "Concept Smoke Screen",
    logo: "/partners/concept-smoke-screen.png",
    category: "Beveiligingssystemen",
    description: "Gespecialiseerde rookgordijn systemen voor diefstalpreventie",
    specialties: ["Rookgordijn Systemen", "Diefstalpreventie", "Retail Security"],
    website: "https://www.conceptsmokescreen.com"
  },
  {
    name: "Xtralis",
    logo: "/partners/xtralis.png",
    category: "Branddetectie",
    description: "Vroege rookdetectie en brandveiligheidssystemen",
    specialties: ["Vroege Rookdetectie", "VESDA Systemen", "Brandveiligheid"],
    website: "https://www.xtralis.com"
  }
];

const certifications = [
  {
    name: "ISO 9001:2015",
    description: "Kwaliteitsmanagementsysteem",
    icon: Award
  },
  {
    name: "ISO 27001",
    description: "Informatiebeveiligingsmanagement", 
    icon: Shield
  },
  {
    name: "FLIR Certified",
    description: "Gecertificeerd FLIR Partner",
    icon: Wrench
  },
  {
    name: "Axis Certified",
    description: "Axis Solution Partner",
    icon: Shield
  }
];
---

<section class="py-20 bg-gradient-to-b from-primary-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-primary-900 mb-4">
        Onze <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-600 to-secondary-600">Technologiepartners</span>
      </h2>
      <p class="text-xl text-primary-600 max-w-3xl mx-auto">
        Wij werken samen met de wereldwijde marktleiders in beveiligings- en IT-technologie 
        om u de beste en meest betrouwbare oplossingen te bieden.
      </p>
    </div>

    <!-- Partners Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 mb-16">
      {partners.map((partner, index) => (
        <div class={`group bg-white rounded-2xl p-6 border border-primary-200 hover:border-accent-300 hover:shadow-xl transition-all duration-300 animate-slide-up`} style={`animation-delay: ${index * 0.1}s;`}>
          <div class="flex items-center justify-between mb-4">
            <div class="h-16 flex items-center">
              <img 
                src={partner.logo} 
                alt={partner.name}
                class="max-h-full max-w-full object-contain filter grayscale group-hover:grayscale-0 transition-all duration-300"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
              />
              <div class="hidden text-primary-700 font-bold text-xl">
                {partner.name}
              </div>
            </div>
            <a 
              href={partner.website}
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary-400 hover:text-accent-600 transition-colors opacity-0 group-hover:opacity-100"
            >
              <ExternalLink class="w-5 h-5" />
            </a>
          </div>
          
          <div class="mb-2">
            <span class="inline-block bg-accent-100 text-accent-700 px-3 py-1 rounded-full text-sm font-medium">
              {partner.category}
            </span>
          </div>
          
          <h3 class="text-xl font-bold text-primary-900 mb-2 group-hover:text-accent-600 transition-colors">
            {partner.name}
          </h3>
          
          <p class="text-primary-600 mb-4 text-sm leading-relaxed">
            {partner.description}
          </p>
          
          <div class="space-y-1">
            {partner.specialties.map((specialty) => (
              <div class="flex items-center text-primary-700 text-sm">
                <div class="w-2 h-2 bg-accent-400 rounded-full mr-2"></div>
                {specialty}
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Certifications -->
    <div class="mb-16">
      <h3 class="text-3xl font-bold text-primary-900 text-center mb-12">
        Certificeringen & Kwaliteitskeurmerken
      </h3>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {certifications.map((cert, index) => {
          const Icon = cert.icon;
          return (
            <div class={`bg-white rounded-xl p-6 border border-primary-200 hover:border-accent-300 hover:shadow-lg transition-all duration-300 text-center animate-slide-up`} style={`animation-delay: ${index * 0.1}s;`}>
              <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <Icon class="w-8 h-8 text-accent-600" />
              </div>
              <h4 class="font-bold text-primary-900 mb-2">{cert.name}</h4>
              <p class="text-primary-600 text-sm">{cert.description}</p>
            </div>
          );
        })}
      </div>
    </div>

    <!-- Why These Partners Section -->
    <div class="bg-gradient-to-r from-accent-500 to-secondary-500 rounded-2xl p-12 text-white">
      <div class="max-w-4xl mx-auto text-center">
        <h3 class="text-3xl font-bold mb-6">
          Waarom Wij Kiezen Voor Deze Partners
        </h3>
        <p class="text-xl mb-8 text-accent-100 leading-relaxed">
          Onze partners worden zorgvuldig geselecteerd op basis van innovatie, betrouwbaarheid en kwaliteit. 
          Samen zorgen we ervoor dat u altijd beschikt over de nieuwste en beste technologie op het gebied van beveiliging en IT-infrastructuur.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <Award class="w-8 h-8 text-white" />
            </div>
            <h4 class="text-xl font-bold mb-2">Kwaliteit</h4>
            <p class="text-accent-100">Alleen A-merken met bewezen track record</p>
          </div>
          
          <div>
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <Shield class="w-8 h-8 text-white" />
            </div>
            <h4 class="text-xl font-bold mb-2">Betrouwbaarheid</h4>
            <p class="text-accent-100">Langjarige partnerships met stabiele leveranciers</p>
          </div>
          
          <div>
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <Wrench class="w-8 h-8 text-white" />
            </div>
            <h4 class="text-xl font-bold mb-2">Support</h4>
            <p class="text-accent-100">Uitgebreide training en technische ondersteuning</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>