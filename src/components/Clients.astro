---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-primary-900 mb-4">
        Vertrouwd door <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-600 to-secondary-600">200+ Klanten</span>
      </h2>
      <p class="text-xl text-primary-600 max-w-3xl mx-auto">
        Van overheidsinstanties tot grote bedrijven - wij leveren beveiligingsoplossingen 
        die bedrijven en organisaties in het Caribisch gebied kunnen vertrouwen.
      </p>
    </div>

    <!-- Client Sectors -->
    <div class="mb-20">
      {sectors.map((sector, sectorIndex) => (
        <div class="mb-12 animate-slide-up" style={`animation-delay: ${sectorIndex * 0.1}s;`}>
          <h3 class="text-2xl font-bold text-primary-800 mb-6 text-center">{sector.name}</h3>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
            {sector.clients.map((client, clientIndex) => (
              <div class="group bg-primary-50 rounded-xl p-6 hover:bg-primary-100 transition-all duration-300 hover:shadow-lg">
                <div class="h-20 flex items-center justify-center mb-4">
                  <img 
                    src={client.logo} 
                    alt={client.name}
                    class="max-h-full max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
                  />
                  <div class="hidden text-primary-700 font-semibold text-center text-sm">
                    {client.name}
                  </div>
                </div>
                <p class="text-primary-600 text-center text-sm font-medium group-hover:text-primary-800 transition-colors">
                  {client.name}
                </p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Testimonials -->
    <div class="mb-16">
      <h3 class="text-3xl font-bold text-primary-900 text-center mb-12">
        Wat Onze Klanten Zeggen
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div class={`bg-gradient-to-br from-primary-50 to-accent-50 rounded-2xl p-8 animate-slide-up`} style={`animation-delay: ${index * 0.2}s;`}>
            <!-- Stars -->
            <div class="flex space-x-1 mb-4">
              {Array.from({ length: testimonial.rating }, (_, i) => (
                <svg key={i} class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            
            <blockquote class="text-primary-700 mb-6 italic leading-relaxed">
              "{testimonial.quote}"
            </blockquote>
            
            <div class="flex items-center">
              <div class="w-12 h-12 bg-gradient-to-r from-accent-500 to-secondary-500 rounded-full flex items-center justify-center text-white font-bold mr-4">
                {testimonial.author.split(' ').map(n => n[0]).join('')}
              </div>
              <div>
                <div class="font-semibold text-primary-900">{testimonial.author}</div>
                <div class="text-primary-600 text-sm">{testimonial.position}</div>
                <div class="text-accent-600 text-sm font-medium">{testimonial.company}</div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Stats -->
    <div class="bg-gradient-to-r from-primary-900 to-accent-900 rounded-2xl p-12 text-white">
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 text-center">
        <div class="animate-slide-up">
          <div class="text-4xl font-bold mb-2">500+</div>
          <div class="text-primary-200">Succesvolle Installaties</div>
        </div>
        <div class="animate-slide-up" style="animation-delay: 0.1s;">
          <div class="text-4xl font-bold mb-2">200+</div>
          <div class="text-primary-200">Tevreden Klanten</div>
        </div>
        <div class="animate-slide-up" style="animation-delay: 0.2s;">
          <div class="text-4xl font-bold mb-2">14+</div>
          <div class="text-primary-200">Jaar Ervaring</div>
        </div>
        <div class="animate-slide-up" style="animation-delay: 0.3s;">
          <div class="text-4xl font-bold mb-2">24/7</div>
          <div class="text-primary-200">Support & Monitoring</div>
        </div>
      </div>
    </div>
  </div>
</section>