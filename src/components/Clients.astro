const testimonials = [
  {
    quote: "Installation Technologies heeft onze complete beveiligingsinfrastructuur gemoderniseerd. Hun expertise en professionele aanpak maken het verschil.",
    author: "Marco Davelaar",
    position: "IT Manager",
    company: "SEHOS",
    rating: 5
  },
  {
    quote: "Al meer dan 8 jaar werken wij samen met Installation Technologies. Hun betrouwbaarheid en kwaliteit zijn ongeëvenaard op Curaçao.",
