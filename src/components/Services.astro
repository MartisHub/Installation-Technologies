---
import { Shield, Flame, Server, Eye, Car, ArrowRight } from 'lucide-react';

const services = [
  {
    icon: Shield,
    title: "Beveiligingstechnologie",
    description: "Inbraakdetectie, camerabewaking, intercomsystemen, toegangscontrole en automatische deuren voor complete beveiliging.",
    features: ["CCTV & IP Camera's", "Inbraakdetectie", "Toegangscontrole", "Intercomsystemen"],
    color: "accent",
    href: "/diensten/beveiliging"
  },
  {
    icon: Flame,
    title: "Brandveiligheid",
    description: "Branddetectiesystemen, blussystemen en Concept Smoke Screen voor optimale brandbeveiliging van uw pand.",
    features: ["Branddetectie", "Blussystemen", "Smoke Screen", "24/7 Monitoring"],
    color: "red",
    href: "/diensten/brandveiligheid"
  },
  {
    icon: Server,
    title: "IT & Infrastructuur",
    description: "Gestructureerde netwerkbekabeling, serverruimtes, telefoonsystemen en complete IT-infrastructuur oplossingen.",
    features: ["Netwerkbekabeling", "Serverruimtes", "VoIP Systemen", "IT Racks"],
    color: "secondary",
    href: "/diensten/it-infrastructuur"
  },
  {
    icon: Eye,
    title: "Inspectie & Monitoring",
    description: "Thermische inspectiecamera's, alarmcentrale monitoring en preventief onderhoudsbeheer voor proactieve veiligheid.",
    features: ["FLIR Thermische Camera's", "Alarmcentrale", "Dashboarding", "Preventief Onderhoud"],
    color: "purple",
    href: "/diensten/inspectie"
  },
  {
    icon: Car,
    title: "Parkeeroplossingen",
    description: "Automatische parkeersystemen, kentekenherkenning en parkeerbeheersoftware voor efficiënt parkeren.",
    features: ["Automatische Systemen", "Kentekenherkenning", "Parkeerbeheersoftware", "Toegangscontrole"],
    color: "green",
    href: "/diensten/parkeren"
  }
];

const colorClasses = {
  accent: {
    bg: "bg-accent-500/10",
    text: "text-accent-600",
    border: "border-accent-500/20",
    hover: "hover:border-accent-500/40"
  },
  red: {
    bg: "bg-red-500/10",
    text: "text-red-600",
    border: "border-red-500/20",
    hover: "hover:border-red-500/40"
  },
  secondary: {
    bg: "bg-secondary-500/10",
    text: "text-secondary-600",
    border: "border-secondary-500/20",
    hover: "hover:border-secondary-500/40"
  },
  purple: {
    bg: "bg-purple-500/10",
    text: "text-purple-600",
    border: "border-purple-500/20",
    hover: "hover:border-purple-500/40"
  },
  green: {
    bg: "bg-green-500/10",
    text: "text-green-600",
    border: "border-green-500/20",
    hover: "hover:border-green-500/40"
  }
};
---

<section class="py-20 bg-gradient-to-b from-primary-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-primary-900 mb-4">
        Onze <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-600 to-secondary-600">Expertise</span>
      </h2>
      <p class="text-xl text-primary-600 max-w-3xl mx-auto">
        Van beveiligingsinstallaties tot complete IT-infrastructuur. Wij bieden geïntegreerde oplossingen 
        die uw bedrijf veilig en toekomstbestendig maken.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {services.map((service, index) => {
        const Icon = service.icon;
        const colors = colorClasses[service.color];
        
        return (
          <div 
            class={`group bg-white rounded-2xl p-8 border-2 ${colors.border} ${colors.hover} transition-all duration-300 hover:shadow-xl hover:shadow-primary-500/5 animate-slide-up`}
            style={`animation-delay: ${index * 0.1}s;`}
          >
            <div class={`w-16 h-16 ${colors.bg} rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
              <Icon class={`w-8 h-8 ${colors.text}`} />
            </div>
            
            <h3 class="text-2xl font-bold text-primary-900 mb-4 group-hover:text-accent-600 transition-colors">
              {service.title}
            </h3>
            
            <p class="text-primary-600 mb-6 leading-relaxed">
              {service.description}
            </p>
            
            <ul class="space-y-2 mb-6">
              {service.features.map((feature) => (
                <li class="flex items-center text-primary-700">
                  <div class={`w-2 h-2 ${colors.bg} rounded-full mr-3`}></div>
                  {feature}
                </li>
              ))}
            </ul>
            
            <a 
              href={service.href} 
              class={`group/link inline-flex items-center ${colors.text} font-semibold hover:underline transition-all duration-200`}
            >
              Meer informatie
              <ArrowRight class="w-4 h-4 ml-2 group-hover/link:translate-x-1 transition-transform" />
            </a>
          </div>
        );
      })}
    </div>

    <!-- CTA Section -->
    <div class="text-center bg-gradient-to-r from-accent-500 to-secondary-500 rounded-2xl p-12 text-white">
      <h3 class="text-3xl font-bold mb-4">
        Klaar voor een veiligere toekomst?
      </h3>
      <p class="text-xl mb-8 text-accent-100">
        Onze experts staan klaar om uw specifieke beveiligingsbehoeften te bespreken en een op maat gemaakte oplossing te ontwikkelen.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-accent-600 px-8 py-4 rounded-lg font-semibold hover:bg-accent-50 transition-colors">
          Plan een Gratis Consult
        </a>
        <a href="/projecten" class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-8 py-4 rounded-lg font-semibold hover:bg-white/20 transition-colors">
          Bekijk Onze Projecten
        </a>
      </div>
    </div>
  </div>
</section>