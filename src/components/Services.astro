---
import { Shield, Flame, Server, Eye, Car, ArrowRight } from 'lucide-react';

const services = [
  {
    icon: Shield,
    title: "Beveiligingstechnologie",
    description: "Inbraakdetectie, camerabewaking, intercomsystemen, toegangscontrole en automatische deuren voor complete beveiliging.",
    features: ["CCTV & IP Camera's", "Inbraakdetectie", "Toegangscontrole", "Intercomsystemen"],
    href: "/diensten/beveiliging"
  },
  {
    icon: Flame,
    title: "Brandveiligheid",
    description: "Branddetectiesystemen, blussystemen en Concept Smoke Screen voor optimale brandbeveiliging van uw pand.",
    features: ["Branddetectie", "Blussystemen", "Smoke Screen", "24/7 Monitoring"],
    href: "/diensten/brandveiligheid"
  },
  {
    icon: Server,
    title: "IT & Infrastructuur",
    description: "Gestructureerde netwerkbekabeling, serverruimtes, telefoonsystemen en complete IT-infrastructuur oplossingen.",
    features: ["Netwerkbekabeling", "Serverruimtes", "VoIP Systemen", "IT Racks"],
    href: "/diensten/it-infrastructuur"
  },
  {
    icon: Eye,
    title: "Inspectie & Monitoring",
    description: "Thermische inspectiecamera's, alarmcentrale monitoring en preventief onderhoudsbeheer voor proactieve veiligheid.",
    features: ["FLIR Thermische Camera's", "Alarmcentrale", "Dashboarding", "Preventief Onderhoud"],
    href: "/diensten/inspectie"
  },
  {
    icon: Car,
    title: "Parkeeroplossingen",
    description: "Automatische parkeersystemen, kentekenherkenning en parkeerbeheersoftware voor efficiënt parkeren.",
    features: ["Automatische Systemen", "Kentekenherkenning", "Parkeerbeheersoftware", "Toegangscontrole"],
    href: "/diensten/parkeren"
  }
];
---

<section class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-20">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
        Onze <span class="text-red-600">Expertise</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Van beveiligingsinstallaties tot complete IT-infrastructuur. Wij bieden geïntegreerde oplossingen 
        die uw bedrijf veilig en toekomstbestendig maken.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
      {services.map((service, index) => {
        const Icon = service.icon;
        
        return (
          <div 
            class={`group bg-white rounded-2xl p-8 border border-gray-200 hover:border-red-200 hover:shadow-large transition-all duration-300 animate-slide-up`}
            style={`animation-delay: ${index * 0.1}s;`}
          >
            <div class={`w-16 h-16 bg-red-50 rounded-xl flex items-center justify-center mb-6 group-hover:bg-red-100 transition-colors duration-300`}>
              <Icon class={`w-8 h-8 text-red-600`} />
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-red-600 transition-colors duration-300">
              {service.title}
            </h3>
            
            <p class="text-gray-600 mb-6 leading-relaxed">
              {service.description}
            </p>
            
            <ul class="space-y-2 mb-6">
              {service.features.map((feature) => (
                <li class="flex items-center text-gray-700">
                  <div class={`w-2 h-2 bg-red-400 rounded-full mr-3`}></div>
                  {feature}
                </li>
              ))}
            </ul>
            
            <a 
              href={service.href} 
              class={`group/link inline-flex items-center text-red-600 font-semibold hover:text-red-700 transition-colors duration-200`}
            >
              Meer informatie
              <ArrowRight class="w-4 h-4 ml-2 group-hover/link:translate-x-1 transition-transform" />
            </a>
          </div>
        );
      })}
    </div>

    <!-- CTA Section -->
    <div class="text-center bg-red-600 rounded-2xl p-12 text-white">
      <h3 class="text-3xl font-bold mb-4">
        Klaar voor een veiligere toekomst?
      </h3>
      <p class="text-xl mb-8 text-red-100 max-w-2xl mx-auto">
        Onze experts staan klaar om uw specifieke beveiligingsbehoeften te bespreken en een op maat gemaakte oplossing te ontwikkelen.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-red-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-50 transition-colors duration-200">
          Plan een Gratis Consult
        </a>
        <a href="/projecten" class="bg-red-700 text-white border-2 border-red-500 px-8 py-4 rounded-lg font-semibold hover:bg-red-800 transition-colors duration-200">
          Bekijk Onze Projecten
        </a>
      </div>
    </div>
  </div>
</section>